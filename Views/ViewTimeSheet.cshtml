@model ORP.Administration.Models.TimeSheetReportModel

@using ORP.Administration.Models
@{
    ViewBag.Title = "View TimeSheet";
}
@Html.Label("", "View TimeSheet", new { @class = "MainHeadText" })

<a href="@Url.Action("TimeSheetGeneration", "Reports")" style="padding-left:80%;font-size:11pt">Back To Generate TimeSheet</a>
<div class="form-controls" style="width: 100%;">
    <div>
        <table id="TimesheetTable" class="userList inner altRow hover addBorder" style="margin: 0 auto 0 auto;">
            <thead>
                <tr>
                    <th>
                        @Html.Label("User Name", new { @class = "gridHeadings" })
                    </th>
                    <th>
                        @Html.Label("Project Code", new { @class = "gridHeadings" })
                    </th>
                    <th>
                        @Html.Label("Task Name", new { @class = "gridHeadings" })
                    </th>
                    <th>
                        @Html.Label("Start Time", new { @class = "gridHeadings" })
                    </th>
                    <th>
                        @Html.Label("End Time", new { @class = "gridHeadings" })
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model.TimeSheetTaskDetails != null)
                {
                    foreach (TimeSheetTaskDetails model in Model.TimeSheetTaskDetails)
                    {
                        <tr class="gridDetails">
                            <td>
                                @Html.DisplayFor(modelItem => model.Username)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => model.ProjectCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => model.TaskName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => model.StartTime)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => model.EndTime)
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        <br style="clear:both;" />
    </div>
</div>
<link href="~/Content/jquery-ui.css" rel="stylesheet" />
<script type="text/javascript">
    $(document).ready(function () {
        $.noConflict(true);
        var table = $('#TimesheetTable').DataTable({
            "sPaginationType": "full_numbers",
            "bFilter": false,
            "searching": true,
            "bLengthChange": true,
            "bProcessing": true,
            "bAutoWidth": false,
            "bSort": true,
            dom: 'lfrBtip',
            responsive: true,
            buttons: [
                { extend: 'excel', className: 'btn-excel' }
            ]
        });
    });
</script>
<style type="text/css">
    .ui-dialog-titlebar {
        display: none;
    }
</style>

